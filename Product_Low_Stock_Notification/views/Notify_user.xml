<odoo>
    <data>
        <record id="view_user_form_extension" model="ir.ui.view">
            <field name="name">res.user.form.extension</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='preferences']/group" position="before">
                    <group><field name="Notify"/></group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
